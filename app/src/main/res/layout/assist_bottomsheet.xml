<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bottomSheet"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="100dp"
    app:behavior_hideable="true"
    app:behavior_peekHeight="190dp"
    app:layout_behavior="android.support.design.widget.BottomSheetBehavior">

    <TextView
        android:id="@+id/assistHelpTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:background="#fbfbfb"
        android:maxWidth="250dp"
        android:padding="12dp"
        android:text="Please ask a query to get started !" />

    <TextView
        android:id="@+id/userTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:background="#299ef4"
        android:maxWidth="250dp"
        android:padding="12dp"
        android:text="Listening ..."
        android:textColor="@color/white"
        android:visibility="gone"
        tools:text="Navigate to gram panchayat ABC" />

    <TextView
        android:id="@+id/assistTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:background="#fbfbfb"
        android:maxWidth="250dp"
        android:padding="12dp"
        android:visibility="gone"
        tools:text="Hey! How are you" />


    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone" />

</LinearLayout>